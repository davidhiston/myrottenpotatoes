-# This file is app/view/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th More Info
      %th Edit Movie
      %th Delete Movie
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
        %td= link_to "Edit #{movie.title}", movie_path(movie)
        %td= link_to "Delete #{movie.title}", movie_path(movie)

%h1= link_to 'Add new movie', new_movie_path
